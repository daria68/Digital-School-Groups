

@{
    ViewBag.Title = "Lista categoriilor";
}

@if (TempData.ContainsKey("message"))
{
    <h1>@ViewBag.message</h1>
}


<div class="p-5 text-center bg-image"
     style="
      background-image: url('https://i.pinimg.com/originals/2a/a6/fa/2aa6fadddac51ca3a2852d94332a3ec0.jpg');
      height: 400px;
      margin-top: 58px;
    ">
</div>
<!-- Background image -->

<div class="row">
    @foreach (var category in ViewBag.Categories)
    {
        <div class="col-md-4">
            <h4>@category.CategoryName</h4>
            <a class="btn btn-warning btn-sm" href="/Categories/Show/@category.CategoryId">Afiseaza categoria</a>
            <a class="btn btn-warning btn-sm" href="/Categories/Edit/@category.CategoryId">Editare categorie</a>
        </div>
    }
</div>






<br />
<div class="text-center">
    <a class="btn btn-secondary btn-lg active" role="button" aria-pressed="true" href="/Categories/New">Adauga o noua categorie</a>
    <br />

    <br />
    <a href="/Groups/Index" class="btn btn-secondary btn-lg active" role="button" aria-pressed="true">Vezi toate grupurile</a>
</div>
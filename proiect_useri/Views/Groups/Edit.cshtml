@model proiect.Models.Group
@{
    ViewBag.Title = "Edit";
}
<h2>Edit</h2>
<p>
    Afisare formular de editare grup 
</p>
@using (Html.BeginForm(actionName: "Edit", controllerName: "Groups"))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)
    <br />
    @Html.Hidden("GroupId")
    @Html.Label("GroupName", "Nume grup")

    <br />
    @Html.Editor("GroupName")
    @Html.ValidationMessageFor(m => m.GroupName, "", new { @class = "text-danger" })
    <br /><br />
    <label>Selectati categoria</label>
    @Html.DropDownListFor(m => m.CategoryId, new SelectList(Model.Categ, "Value", "Text"),
    "Selectati categoria", new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.CategoryId, "", new { @class = "text-danger" })
    <br />

    <br />
    <button class="btn btn-warning btn-sm" type="submit">Modifica grup</button>
}
